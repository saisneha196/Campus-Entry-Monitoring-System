rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Development rules - more permissive for testing
    
    // Users collection
    match /users/{userId} {
      // Allow authenticated users to read/write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow any authenticated user to read basic user info (needed for role checks)
      allow read: if request.auth != null;
    }
    
    // Visits collection
    match /visits/{visitId} {
      // Allow anyone to create visits (visitor registration)
      allow create: if true;
      
      // Allow authenticated users to read and update visits
      allow read, update: if request.auth != null;
      
      // No deletes for safety
      allow delete: if false;
    }
    
    // All other collections - allow authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

// Note: For production, use the more restrictive rules in firestore.rules
// These development rules are more permissive to allow testing without complex setup
